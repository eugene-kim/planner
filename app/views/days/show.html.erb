<h2 class="<%= time_tense(@daily_list.date) %>" id="list_<%= @daily_list.id %>"><%= format_date(@daily_list.date) %></h2>
<ul>
	<% @daily_list.tasks.each do |task| %>
		<li>
			<h3><%= task.title %></h3>
			<p><%= task.body %></p>
		</li>
	<% end -%>
</ul>

<%= link_to "Edit", edit_day_path(@daily_list) %> |
<%= link_to "Back", days_path(anchor: "daily_list_#{@daily_list.id}") %>